---
import EmailIcon from "./icons/EmailIcon.astro";
import MapIcon from "./icons/MapIcon.astro";
import MobileIcon from "./icons/MobileIcon.astro";
import DescargarButton from "./buttons/DescargarButton.astro";
---

<div class="mx-5">
  <div class="flex justify-center items-center">
    <div class="flex border p-5">
      <img
        src="./contact.png"
        id="profile-picture"
        class="hidden md:block md:max-w-[250px] h-auto"
        alt="curriculum de natalia varela graffigna"
      />
      <div class="m-5">
        <h1 class="text-2xl">Natalia Varela Graffigna</h1>
        <p class="flex items-center my-2">
          <MobileIcon class="size-4 mr-1" />
          <a
            href="tel:+34613612805"
            class="text-xl hover:font-bold text-gray-200 hover:text-white transition-all duration-300 ease-in-out"
          >
            +34 613 612 805</a
          >
        </p>
        <div class="flex items-center mb-2">
          <EmailIcon class="size-4 mr-1" />
          <a
            href="mailto:nataliavarelagr@gmail.com"
            class="text-smhover:font-bold text-gray-200 hover:text-white transition-all duration-300 ease-in-out"
          >
            nataliavarelagr@gmail.com</a
          >
        </div>
        <div class="flex items-center mb-5">
          <MapIcon class="size-4 mr-1" />
          <p class="text-sm text-gray-200">
            Actualmente en <span class="font-bold">Barcelona, Spain</span>
          </p>
        </div>
        <div class="flex justify-center m-5">
          <img
            src="./contact.png"
            id="profile-picture"
            class="md:hidden w-60 h-auto"
            alt="curriculum de natalia varela graffigna"
          />
        </div>
        <div class="flex justify-center md:justify-start">
          <DescargarButton />
        </div>
      </div>
    </div>
  </div>
</div>
